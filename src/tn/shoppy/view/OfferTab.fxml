<AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="618.0" prefWidth="1058.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.shoppy.controller.OfferController">
    <children>
        <Pane prefHeight="51.0" prefWidth="800.0">
            <children>
                <Button fx:id="searchOfferButton" layoutX="339.0" layoutY="10.0" mnemonicParsing="false" text="Rechercher" />
                <Label fx:id="searchOfferLabel" layoutX="441.0" layoutY="15.0" text="Aucune offre ne correspond à votre recherche." />
                <TextField fx:id="searchOfferField" layoutX="14.0" layoutY="10.0" prefHeight="31.0" prefWidth="315.0" promptText="Trouver un magasin..." />
            </children>
        </Pane>
        <TableView fx:id="offerTable" layoutY="53.0" prefHeight="551.0" prefWidth="802.0">
            <columns>
                <TableColumn fx:id="offerIdColumn" prefWidth="56.0" text="ID" />
                <TableColumn fx:id="offerNameColumn" prefWidth="138.0" text="Nom" />
            </columns>
        </TableView>
        <VBox layoutX="811.0" layoutY="51.0" prefHeight="444.0" prefWidth="245.0">
            <children>
                <Accordion prefHeight="551.0" prefWidth="235.0">
                    <panes>
                        <TitledPane animated="false" layoutX="10.0" layoutY="41.0" text="Modifier une offre">
                            <content>
                                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="318.0" prefWidth="243.0">
                                    <children>
                                        <TextField fx:id="updateOfferNameField" layoutX="17.0" layoutY="59.0" prefHeight="30.0" prefWidth="200.0" />
                                        <Button fx:id="updateOfferButton" layoutX="20.0" layoutY="303.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="200.0" text="Valider">
                                            <cursor>
                                                <!--<Cursor fx:constant="HAND" />-->
                                            </cursor>
                                        </Button>
                                        <Text layoutX="17.0" layoutY="43.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Nom de l'offre:" />
                                        <Text layoutX="17.0" layoutY="124.0" strokeType="OUTSIDE" strokeWidth="0.0" text="WIP: continuer" />
                                    </children>
                                </AnchorPane>
                            </content>
                        </TitledPane>
                        <TitledPane animated="false" prefHeight="448.0" prefWidth="245.0" text="Ajouter un magasin">
                            <content>
                                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="193.0">
                                    <children>
                                        <TextField fx:id="addOfferNameField" layoutX="17.0" layoutY="59.0" prefHeight="30.0" prefWidth="200.0" />
                                        <Button fx:id="addOfferButton" layoutX="17.0" layoutY="299.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="200.0" text="Valider">
                                            <cursor>
                                                <!--<Cursor fx:constant="HAND" />-->
                                            </cursor>
                                        </Button>
                                        <Text layoutX="17.0" layoutY="43.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Nom du magasin :" />
                                        <Text layoutX="17.0" layoutY="124.0" strokeType="OUTSIDE" strokeWidth="0.0" text="WIP: à terminer" />
                                    </children>
                                </AnchorPane>
                            </content>
                        </TitledPane>
                    </panes>
                </Accordion>
                <HBox alignment="CENTER" prefHeight="39.0" prefWidth="802.0" spacing="10.0">
                    <padding>
                        <Insets top="20.0" />
                    </padding>
                </HBox>
            </children>
        </VBox>
        <Button fx:id="deleteOfferButton" layoutX="850.0" layoutY="515.0" mnemonicParsing="false" onAction="#deleteOfferAction" text="Supprimer la selection" />
      <ImageView fx:id="offerHelpImage" fitHeight="32.0" fitWidth="32.0" layoutX="1002.0" layoutY="10.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../resources/images/help.png" />
         </image>
      </ImageView>
    </children>
</AnchorPane>
